    </tr>

@foreach (var item in Model.EJobPostings) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PartnerRequisitionNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PartnerJobLevel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BusinessCategory)
