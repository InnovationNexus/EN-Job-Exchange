            @Html.DisplayFor(modelItem => item.Requirements)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EstHoursPerWeek)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WorkSchedule)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostingStartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostingEndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Active_YN)
        </td>
        <td style="min-width:150px; text-align:center">
            @Html.ActionLink("Edit", "Edit", new { jobPostingID = item.JobPostingID }) |
            @Html.ActionLink("Details", "Details", new { jobPostingID = item.JobPostingID }) |
            @Html.ActionLink("Delete", "Delete", new { jobPostingID = item.JobPostingID })
        </td>
    </tr>
}

</table>
