            @Html.DisplayFor(model => model.referral.ReferralDate)
        </div>
        <div class="display-label">
            @Html.DisplayNameFor(model => model.referral.Name_First)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.referral.Name_First)
        </div>
        <div class="display-label">
            @Html.DisplayNameFor(model => model.referral.Name_Last)
        </div>
        <div class="display-field">
