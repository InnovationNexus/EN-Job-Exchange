            @*<input type="submit" value="Update Referral" />*@ <span style="font-weight: normal">@Html.ActionLink("Update Referral", "createNewNote", "Referral", new object { }, new { @id = "updateReferral" })</span>
            |
            @Html.ActionLink("Back to List", "Index", "Home", new { }, null)
        </p>
    </fieldset>
}
<script type="text/javascript">
    $(document).ready(function () {

        $(function () {
            $('#updateReferral').click(function (e) {
                e.preventDefault();
                $(this).parents('form').first().submit();
            });
        });

    });
</script>
