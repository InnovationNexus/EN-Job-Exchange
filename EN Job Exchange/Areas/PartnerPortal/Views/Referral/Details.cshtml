            @Html.DisplayNameFor(model => model.referral.ENNotes)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.referral.ENNotes)
        </div>
        <div class="display-label">
            @Html.DisplayNameFor(model => model.referral.StatusDesc)
        </div>
